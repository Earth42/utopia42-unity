.root {
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    translate: 0 -25%;
}


.label,
.message{
    -unity-text-align: upper-center;
    background-color: rgba(0, 0, 0, 0.3);
    padding: 8px;
    border-radius: var(--default-border-radius);
}

.label {
    font-size: 60px;
    -unity-font-style: bold;
    min-width: 60px;
}

.message{
    font-size: 32px;
}